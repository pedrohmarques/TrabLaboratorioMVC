@model Prova1.Models.Compra

@{
    ViewData["Title"] = "Index";
}

<h2>Informação</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div class="text-danger"></div>
            <div class="form-group modal-lg" style="display:inline-flex;">
                <label class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <div class="form-group">
                    <button type="submit" class="btn btn-info"><i class="glyphicon glyphicon-search"></i></button>
                </div>
            </div>
        </form>
    </div>
    @{
        var compra = ViewBag.ordemDeCompra;
        var venda = ViewBag.ordemDeVenda;

        if (compra != null)
        {
            if (((IEnumerable<dynamic>)compra).Count() > 0)
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Ação</th>
                            <th scope="col">Broker</th>
                            <th scope="col">Valor</th>
                            <th scope="col">Quantidade</th>
                            <th scope="col">Data</th>
                            <th scope="col">Operação</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var acao in compra)
                        {
                            <tr>
                                <td>
                                    <label asp-for="Acao">@acao.Acao</label>
                                </td>
                                <td>
                                    <label asp-for="Broker">@acao.Broker</label>
                                </td>
                                <td>
                                    <label asp-for="Valor">@acao.Valor</label>
                                </td>
                                <td>
                                    <label asp-for="Quantidade">@acao.Quantidade</label>
                                </td>
                                <td>
                                    <label asp-for="Data">@acao.Data</label>
                                </td>
                                <td>
                                    <label>Compra</label>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }

        }

        if (venda != null)
        {
            if (((IEnumerable<dynamic>)venda).Count() > 0)
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Ação</th>
                            <th>Broker</th>
                            <th>Valor</th>
                            <th>Quantidade</th>
                            <th>Data</th>
                            <th>Operação</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var acao in venda)
                        {
                            <tr>
                                <td>
                                    <label asp-for="Acao">@acao.Acao</label>
                                </td>
                                <td>
                                    <label asp-for="Broker">@acao.Broker</label>
                                </td>
                                <td>
                                    <label asp-for="Valor">@acao.Valor</label>
                                </td>
                                <td>
                                    <label asp-for="Quantidade">@acao.Quantidade</label>
                                </td>
                                <td>
                                    <label asp-for="Data">@acao.Data</label>
                                </td>
                                <td>
                                    <label>Venda</label>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            }
        }
    }
</div>


